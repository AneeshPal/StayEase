<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
            <h3>Create A NEW LSITING</h3>
            <form method="POST" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <lable for="title" class="form-label">Title</lable>
                    <input name="listing[title]" placeholder="Add catchy title" type="text" class="form control" required>
                </div>
                <div class="mb-3">
                    <lable for="description" class="form-label">Description</lable>
                    <textarea name="listing[description]" placeholder="enter description"
                        class="form-control" required></textarea>
                </div>
                <div class="mb-3">
                    <lable for="image" class="form-label">Image Link</lable>
                    <input name="listing[image]" placeholder="enter image URL/link" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <lable for="price" class="form-label">Price</lable>
                    <input name="listing[price]" placeholder="1200" type="number" class="form-control" required>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4" >
                        <lable for="country" class="form-label">Country</lable>
                        <input name="listing[country]" placeholder="India" type="text" class="form-control" required>
                    </div>
                    <div class="mb-3 col-md-8" >
                        <lable for="location" class="form-label">location</lable>
                        <input name="listing[location]" placeholder="Jaipur,Rajasthan" type="text" class="form-control" required>
                    </div>
                </div>
                <button class="btn btn-dark add-btn">Add</button>
            </form>
        </div>
    </div>